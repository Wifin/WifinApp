<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/headimg"
            android:gravity="center"
            android:padding="@dimen/home_icon_padding" />

        <TextView
            android:id="@+id/text_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:gravity="center" />
    </LinearLayout>
    
    <LinearLayout
	    	android:id="@+id/home_map_container"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:onClick="mapClickEvent">
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/btn_map"
	        android:drawablePadding="10dip"
	        android:gravity="center"
	        android:padding="@dimen/home_icon_padding"
	        android:text="@string/home_map"
	        android:textColor="@color/home_subtitle"
	        android:textSize="15sp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_map_description"
            android:textColor="@color/home_text"
	        android:textSize="14sp"
	        android:gravity="center_vertical"/>
    </LinearLayout>
       
    <View android:background="@color/line_ruler_colour" android:layout_width="fill_parent" android:layout_height="1dip" />
    
    <LinearLayout
        	android:id="@+id/home_camera_container"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:onClick="cameraClickEvent">
        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/btn_camera"
	        android:drawablePadding="10dip"
	        android:gravity="center"
	        android:padding="@dimen/home_icon_padding"
	        android:text="@string/home_camera"
	        android:textColor="@color/home_subtitle"
	        android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_camera_description"
            android:textColor="@color/home_text"
	        android:textSize="14sp"/>
    </LinearLayout>

  </LinearLayout> 
    
</ScrollView>